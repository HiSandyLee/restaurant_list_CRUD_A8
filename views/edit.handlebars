<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body ml-4 mr-2">
          <h5 class="card-title">新增餐廳</h5>
          <hr>

          <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
            <div class="form-group form-row">
              <label for="name" class="col-md-2 col-form-label">
                餐廳名稱
              </label>
              <div class="col-md-10">
                <input type="text" placeholder="{{restaurant.name}}" name="name" value="{{restaurant.name}}"
                  class="form-control" class="form-control">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="name_e" class="col-md-2 col-form-label">
                餐廳英文
              </label>
              <div class="col-md-10">
                <input type="text" placeholder="{{restaurant.name_en}}" name="name_en" value="{{restaurant.name_en}}"
                  class="form-control">
              </div>
            </div>
            <div class="form-group form-row">
              <label for="category" class="col-md-2 col-form-label">
                餐廳總類
              </label>
              <div class="col-md-10">
                <input type="text" placeholder="{{restaurant.category}}" name="category" value="{{restaurant.category}}"
                  class="form-control">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="image" class="col-md-2 col-form-label">
                餐廳圖片
              </label>
              <div class="col-md-10">
                <input type="url" placeholder="{{restaurant.image}}" name="image" value="{{restaurant.image}}"
                  class="form-control">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="location" class="col-md-2 col-form-label">
                餐廳位置
              </label>
              <div class="col-md-10">
                <input type="text" placeholder="{{restaurant.location}}" name="location" value="{{restaurant.location}}"
                  class="form-control">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rating" class="col-md-2 col-form-label">
                餐廳評價
              </label>
              <div class="col-md-10">
                <input type="text" placeholder="{{restaurant.rating}}" name="rating" value="{{restaurant.rating}}"
                  class="form-control">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="description" class="col-md-2 col-form-label">
                餐廳描述
              </label>
              <div class="col-md-10">
                <textarea type="text" placeholder="{{restaurant.description}}" name="description"
                  value="{{restaurant.description}}" class="form-control resize=none">
               </textarea>
              </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
              {{!-- buttom --}}
              <button type="submit" class="btn btn-info btn-sm mr-1">Save</button>
              <a href="/" class="btn btn-info btn-sm">Back</a>

            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>